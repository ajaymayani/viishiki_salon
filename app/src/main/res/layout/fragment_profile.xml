<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    tools:context=".fragements.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/primary_color"
        android:gravity="center">

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/ivProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Hi, UserName"
            android:textColor="#000"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/purple_background"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:padding="@dimen/_7sdp"
            android:text="Name"
            android:textColor="#000"
            android:textSize="23sp"
            app:drawableStartCompat="@drawable/name_icon" />

        <TextView
            android:id="@+id/tvDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:background="@drawable/purple_background"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_7sdp"
            android:text="Date of Birth"
            android:textColor="#000"
            android:textSize="23sp"
            app:drawableStartCompat="@drawable/ic_baseline_calendar_month_24" />

        <TextView
            android:id="@+id/tvUsername1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:background="@drawable/purple_background"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_7sdp"
            android:text="User Name"
            android:textColor="#000"
            android:textSize="23dp"
            app:drawableStartCompat="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:background="@drawable/purple_background"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_7sdp"
            android:text="Phone Number"
            android:textColor="#000"
            android:textSize="23dp"
            app:drawableStartCompat="@drawable/ic_baseline_phone_24" />

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:background="@drawable/purple_background"
            android:fontFamily="@font/poppins_regular"
            android:padding="@dimen/_7sdp"
            android:text="Password"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textSize="23dp"
            app:drawableStartCompat="@drawable/ic_baseline_key_24" />

    </LinearLayout>

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_18sdp"
        android:background="@drawable/purple_background_black_border"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/edit"
        android:textAllCaps="false"
        android:textColor="#000"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_45sdp"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

</LinearLayout>